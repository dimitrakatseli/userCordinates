<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.dimikatseli.usercoordinates.SecondActivity">

    <RelativeLayout
        android:layout_width="386dp"
        android:layout_height="508dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp">

        <Button
            android:id="@+id/third_act_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/third_act_button" />

        <EditText
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="89dp"
            android:layout_toLeftOf="@+id/third_act_button"
            android:layout_toStartOf="@+id/third_act_button"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/userid_txt" />

        <Spinner
            android:id="@+id/timestamp_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/user_id"
            android:layout_marginTop="36dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
